!!!
%html
  %head
    %title Timetable
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .header
      - unless @schedule.nil?
        = link_to t(".teachers"), schedule_teachers_path(@schedule), :class => 'gray button'
        = link_to t(".audiences"), schedule_audiences_path(@schedule), :class => 'gray button'
        = link_to t(".groups"), schedule_groups_path(@schedule), :class => 'gray button'
        = link_to t(".schedule_calls"), schedule_schedule_calls_path(@schedule), :class => 'gray button'
      - if current_user
        = link_to current_user.name, edit_user_path(current_user), :rel => :lazybox, :class => 'orange button'
        = link_to t(".sign_out"), session_path, :method => :delete, :class => 'orange button'
    .message= flash[:notice] if flash[:notice]
    .message= flash[:error] if flash[:error]
    .container
      = yield
