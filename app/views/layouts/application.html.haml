!!!
%html
  %head
    %title Timetable
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    - if current_user
      = current_user.name
      = link_to "Sign Out", session_path, :method => :delete
    - else
      = link_to "Sign In", new_session_path, :rel => :lazybox unless params[:controller] == 'sessions'
      = link_to 'Login with facebook', facebook_url
    .message= flash[:notice] if flash[:notice]
    .message= flash[:error] if flash[:error]

    = yield
