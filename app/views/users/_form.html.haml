= form_for @dispatcher, :url => users_path, :remote => true do |f|
  = f.label :email, 'Email'
  = f.text_field :email
  = error_tag @dispatcher.errors[:email]
  = f.label :first_name, 'First Name'
  = f.text_field :first_name
  = error_tag @dispatcher.errors[:first_name]
  = f.label :last_name, 'Last Name'
  = f.text_field :last_name
  = error_tag @dispatcher.errors[:last_name]
  = f.fields_for :institution, @dispatcher.institution || @dispatcher.build_institution do |form|
    = form.label :name, 'Institution'
    = form.text_field :name
    = error_tag @dispatcher.institution.errors[:name]
  = f.label :password, 'Password'
  = f.password_field :password
  = error_tag @dispatcher.errors[:password]
  = f.label :password_confirmation, 'Password Confirmation'
  = f.password_field :password_confirmation
  %br
  = f.submit :OK
