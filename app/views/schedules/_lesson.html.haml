%h4= lesson.name

%p= lesson.teacher.name

%p= lesson.audience.title

- if @schedule.published
  - if lesson.replacements.empty?
    = link_to('R', new_schedule_replacement_path(@schedule, :group_id => lesson.group_id, :day_id => lesson.day_id, :schedule_call_id => lesson.schedule_call_id, :lesson_id => lesson.id), :rel => :lazybox, :class => 'add_replacement_link')
  - else
    = link_to 'edit R', edit_schedule_replacement_path(@schedule, lesson.replacements.last), :rel => :lazybox
- else
  = link_to 'edit', edit_schedule_lesson_path(@schedule, lesson), :rel => :lazybox
  = link_to 'X', schedule_lesson_path(@schedule, lesson), :method => :delete
