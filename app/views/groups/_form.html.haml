%td{ :colspan => 4 }
  = form_for [@schedule, @object], :remote => true do |f|
    %table
      %tr
        %td= f.text_field :name, :placeholder => placeholder_for(@object, :name)
        %td= f.select :faculty_id, @schedule.faculties.map{ |t| [t.title, t.id] }, :include_blank => true
        %td= f.select :teacher_id, @schedule.teachers.map{ |t| [t.name, t.id] }
        %td.actions
          = f.submit t("ok")
          = link_to t("cancel"), ""
