%tr{:id => "group_#{group.id}"}
  %td= group.name
  %td= group.faculty.title unless group.faculty.nil?
  %td= group.teacher.name unless group.teacher.nil?
  %td.actions
    - unless @schedule.published?
      = link_to t(".edit"), edit_schedule_group_path(@schedule, group), :remote => true
      = link_to t("delete"), schedule_group_path(@schedule, group), :method => :delete, :remote => true, :confirm => t(:are_you_sure)
