- unless @audiences.nil?
  %table#audiences
    %thead
      %tr
        %th= t(".title")
        %th.actions= t(".actions")
    %tbody
      = render :partial => 'audience', :collection => @audiences
    %tfoot
      %tr
        %td= link_to '+', new_schedule_audience_path, :id => :add_audience, :remote => true
