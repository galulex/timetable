tr id="audience_#{audience.id}"
  td= audience.title
  td.actions
    - unless @schedule.published?
      = link_to(t(".edit"), edit_schedule_audience_path(@schedule, audience), :remote => true)
      = link_to(t("delete"), schedule_audience_path(@schedule, audience), :method => :delete, :remote => true, :confirm => t(:are_you_sure))
