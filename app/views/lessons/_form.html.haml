= form_for [@schedule, @lesson], :remote => true do |f|
  = f.label :name, t(".name")
  = f.text_field :name
  = error_tag @lesson.errors[:name]
  = f.label :teacher_id, t(".teacher")
  = f.select :teacher_id, @schedule.teachers.map{ |t| [t.name, t.id] }
  = error_tag @lesson.errors[:teacher_id]
  = f.label :audience_id, t(".audience")
  = f.select :audience_id, @schedule.audiences.map{ |t| [t.title, t.id] }
  = error_tag @lesson.errors[:audience_id]
  = f.hidden_field :group_id, :value => @lesson.group_id
  = f.hidden_field :day_id, :value => @lesson.day_id
  = f.hidden_field :schedule_call_id, :value => @lesson.schedule_call_id
  %br
  = f.submit t(".ok")
